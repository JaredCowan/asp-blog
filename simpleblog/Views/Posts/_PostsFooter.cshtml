@model simpleblog.Infrastructure.PagedData<simpleblog.Models.Post>

<div class="col-lg-3">
  <div class="blog-side-item">
    <div class="blog-post">
      <h3>Latest Blog Post</h3>
      @foreach (var post in Model.Take(3))
      {
        <div class="media">
          <a class="pull-left" href="@Url.RouteUrl("Post", new {post.Id, post.Slug})">
            <img class=" " src="http://placehold.it/81&text=Blog+Image" alt="">
          </a>
          <div class="media-body">
            <h5 class="media-heading">
              <a href="@Url.RouteUrl("Post", new {post.Id, post.Slug})">
                @post.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy")
              </a>
            </h5>
            <p>
              @post.Title
            </p>
            <p class="author">
              By: <a href="javascript:;">@post.User.Username</a>
            </p>
          </div>
        </div>
      }
    </div>

    @Html.Action("TagCloud", "Layout")

  </div>
</div>
