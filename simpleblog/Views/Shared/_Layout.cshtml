@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
  <head>
      <meta name="viewport" content="width=device-width" />
      <title>@ViewBag.Title - Blog</title>
  </head>
  <body>
      <header>
          <h1>
              <a href="@Url.RouteUrl("home")">Blog</a>
          </h1>

          @if (User.Identity.IsAuthenticated)
          {
              <p>Welcome back, @User.Identity.Name</p>
              <a href="@Url.RouteUrl("logout")">Logout</a>

              if (User.IsInRole("admin"))
              {
                    <a href="@Url.Action("index", "Posts", new{area="admin"})">Admin Panel</a>
              }
          }
          else
          {
              <p>
                  <a href="@Url.RouteUrl("login")">Login</a>
              </p>
          }

  
      </header>

      @RenderBody()

      <footer>
          &copy; @DateTime.UtcNow.Year - Me
      </footer>

  </body>
</html>
