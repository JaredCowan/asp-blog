@using System.Configuration
@using System.Reflection
@using System.Web.Optimization
@using Microsoft.WindowsAzure.Storage

@{
  Layout = null;
}

@helper SelectedTabClass(string tabName)
{
  if (tabName == ViewBag.SelectedTab)
  {
    @: active
  }
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta http-equiv="content-language" content="en">
  <meta name="description" content="Verde Circle Software. Verde Circle is at the forefront of changing the way small businesses operate and manage inventory, locations, orders and accounting">
  <meta name="keywords" content="verde circle, thriii, accounting, inventory management, small business, order management, warehouse management, verde circle blog">
  <meta name="author" content="Verde Circle">
  <meta name="robots" content="index, follow">
  <meta property="og:type" content="website">
  <meta property="og:image" content="@Url.VerdeCdn("~/images/verde-circle-logo.jpg")">
  <meta property="og:site_name" content="Verde Circle Software">
  <title>Verde Circle - @ViewBag.Title</title>
  <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Fjalla+One' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400' rel='stylesheet' type='text/css'>
  @Styles.Render("~/styles")
</head>
<body id="top">
  <!--header start-->
  @*@Html.Action("Navbar", "Layout")*@
  <!--header end-->
  <header class="header-frontend">
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <i class="fa fa-bars"></i>
          </button>
          <a class="navbar-brand" href="index.html">
            <img src="@Url.VerdeCdn("~/images/thriii-logo.png")">
          </a>
        </div>
      </div>
      <div class="navbar-collapse collapse thriii-header-background">
        <ul class="nav navbar-nav">
          <li class="@SelectedTabClass("home")">
            <a href="@Url.RouteUrl("home")">Home</a>
          </li>
          <li class="@SelectedTabClass("blog")">
            <a href="@Url.RouteUrl("Posts")">Blog</a>
          </li>
          <li class="@SelectedTabClass("price")">
            <a href="@Url.RouteUrl("price")">Price</a>
          </li>
          <li class="@SelectedTabClass("contact")">
            <a href="@Url.RouteUrl("contact")">Contact</a>
          </li>
          <li class="@SelectedTabClass("signin")">
            <a href="@Url.RouteUrl("signin")">Sign In</a>
          </li>
          <li class="@SelectedTabClass("signup")">
            <a href="@Url.RouteUrl("signup")">Free Trial</a>
          </li>
        </ul>
      </div>
    </div>
</header> <!--header end-->

  @RenderBody()


  <footer class="footer thriii__footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-sm-3">
          <h1>contact info</h1>
          <address>
            <p>Address: 123 10th Street<i class="fa fa-facebook"></i></p>
            <p>
              Venice Beach, CA, 90266
            </p><p>Phone : (310) 123-1444</p>
            <p>Fax : (310) 555-1313</p>
            <p>Email : <a href="javascript:;">support@thriii.com</a></p>
          </address>
        </div>
        <div class="col-lg-5 col-sm-5">
          <h1>latest tweet</h1>
          <div class="tweet-box">
            <i class="fa fa-twitter"></i>
            <em>Please follow <a href="javascript:;">thriii</a> for all future updates of us! <a href="javascript:;">twitter.com/thriii</a></em>
          </div>
        </div>
        <div class="col-lg-3 col-sm-3 col-lg-offset-1">
          <h1>stay connected</h1>
          <ul class="social-link-footer list-unstyled">
            <li><a href="javascript:;"><i class="fa fa-face"></i></a></li>
            <li><a href="javascript:;"><i class="fa fa-linkin"></i></a></li>
            <li><a href="javascript:;"><i class="fa fa-twitt"></i></a></li>
            <li><a href="javascript:;"><i class="fa fa-github"></i></a></li>
          </ul>
        </div>
      </div> <!-- END Row -->
    </div> <!-- End Container -->
  </footer><!-- END thriii__footer -->
  @Scripts.Render("~/scripts")
  @RenderSection("Scripts", false)
</body>
</html>
