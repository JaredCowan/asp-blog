@using System.Configuration
@using System.Reflection
@using System.Web.Optimization
@using Microsoft.WindowsAzure.Storage

@{
  Layout = null;
}

@helper SelectedTabClass(string tabName)
{
  if (tabName == ViewBag.SelectedTab)
  {
    @: active
  }
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta http-equiv="content-language" content="en">
  <meta name="description" content="Blog For Verde Circle. Verde Circle is at the forefront of changing the way small businesses operate and manage inventory, locations, orders and accounting">
  <meta name="keywords" content="verde circle, thriii, accounting, inventory management, small business, order management, warehouse management">
  <meta name="author" content="Verde Circle, Jared Lucas Cowan">
  <meta name="robots" content="index, follow">
  <meta property="og:type" content="website">
  <meta property="og:image" content="@Url.VerdeCdn("~/images/verde-circle-logo.jpg")">
  <meta property="og:site_name" content="Verde Circle Blog">
  <title>Verde Circle - Blog</title>
  @Styles.Render("~/styles")
</head>
<body>
  <!--header start-->
  <header class="header-frontend">
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <i class="fa fa-bars"></i>
          </button>
          <a class="navbar-brand" href="index.html">
            <img src="@Url.VerdeCdn("~/images/thriii-logo.png")">
          </a>
        </div>
        <div class="navbar-collapse collapse thriii-header-background">
          <ul class="nav navbar-nav">
            <li><a href="javascript:;">Home</a></li>
            <li class="@SelectedTabClass("blog")"><a href="@Url.RouteUrl("Home")">Blog</a></li>
            <li><a href="javascript:;">Price</a></li>
            <li><a href="javascript:;">Contact</a></li>
            <li><a href="javascript:;">Sign In</a></li>
            <li><a href="javascript:;">Free Trial</a></li>
          </ul>
        </div>
      </div>
    </div>
  </header> <!--header end-->

  <div class="container">

    @RenderBody()


    <footer>
      &copy; @DateTime.UtcNow.Year - Verde Circle
    </footer>
  </div>
  @Scripts.Render("~/scripts")
  @RenderSection("Scripts", false)
</body>
</html>
